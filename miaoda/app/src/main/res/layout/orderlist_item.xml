<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:id="@+id/all"
    android:background="@drawable/my_bk">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_margin="15dp"
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/showtouxiang"
        app:riv_border_color="#333333"
        app:riv_border_width="2dp"
        app:riv_oval="true" />
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/m"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"/>
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/name"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:id="@+id/m1"
            android:layout_below="@id/m"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"/>
        <TextView
            android:textSize="18dp"
            android:layout_below="@id/m"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"/>
        <TextView
            android:id="@+id/m2"
            android:layout_below="@id/m1"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"/>
        <TextView
            android:textSize="18dp"
            android:layout_below="@id/m1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"/>
    </RelativeLayout>

</LinearLayout>