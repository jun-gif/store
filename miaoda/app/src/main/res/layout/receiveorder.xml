<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cs"
    android:orientation="horizontal">
    <com.example.utils.CircleImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/psy_image"
        android:layout_margin="15dp"
        android:id="@+id/imgss"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="姓名"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m" />

        <TextView
            android:id="@+id/m1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m"
            android:layout_marginBottom="10dp"
            android:text="电话"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m1" />

        <TextView
            android:id="@+id/m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m1"
            android:text="地址"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m1"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@id/m2" />

        <Button
            android:id="@+id/jiedain"
            android:layout_width="61dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:layout_marginRight="51dp"
            android:background="#f5f5f5"
            android:focusable="false"
            android:text="接单" />
    </RelativeLayout>
</LinearLayout>